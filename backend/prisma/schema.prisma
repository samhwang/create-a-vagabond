generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

generator pothos {
  provider = "prisma-pothos-types"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String     @id @default(cuid())
  email     String
  createdAt DateTime
  vagabonds Vagabond[]
}

model Vagabond {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@index([userId])
}
