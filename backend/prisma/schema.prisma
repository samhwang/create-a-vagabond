generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

generator pothos {
  provider = "prisma-pothos-types"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        String     @id @default(cuid())
  email     String
  createdAt DateTime
  vagabonds Vagabond[]
}

enum Drive {
  JUSTICE
  PRINCIPLES
  LOYALTY
  AMBITION
}

model Vagabond {
  id              String @id @default(cuid())
  name            String
  
  charm           Int @default(0)
  cunning         Int @default(0)
  finesse         Int @default(0)
  luck            Int @default(0)
  might           Int @default(0)
  availablePoints Int @default(5)

  user   User   @relation(fields: [userId], references: [id])
  userId String

  @@index([userId])
}
