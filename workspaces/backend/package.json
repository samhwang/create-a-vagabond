{
  "name": "vagabond-app-backend",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest watch",
    "ci": "rome ci ./src/**/*.ts",
    "lint": "rome check ./src/**/*.ts",
    "lint:fix": "rome check --apply ./src/**/*.ts",
    "lint:fix:unsafe": "rome check --apply-unsafe ./src/**/*.ts",
    "format:rome": "rome format --write ./src/**/*.ts",
    "format": "pnpm run lint:fix && pnpm run format:rome && prisma format",
    "typecheck": "tsc",
    "netlify:dev": "cd ../.. && npx netlify functions:serve",
    "dev": "npm run netlify:dev",
    "prisma:migrate": "prisma db push --skip-generate",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:format": "prisma format",
    "seed": "tsx ./bin/seed.ts",
    "generate-schema": "npx tsx ./bin/generate-schema.ts"
  },
  "dependencies": {
    "@clerk/clerk-sdk-node": "^4.8.3",
    "@devoxa/prisma-relay-cursor-connection": "^2.2.2",
    "@netlify/functions": "^1.4.0",
    "@pothos/core": "^3.29.0",
    "@pothos/plugin-errors": "^3.11.0",
    "@pothos/plugin-prisma": "^3.47.2",
    "@pothos/plugin-relay": "^3.39.0",
    "@pothos/plugin-simple-objects": "^3.6.7",
    "@prisma/client": "^4.12.0",
    "graphql-yoga": "^3.8.0"
  },
  "devDependencies": {
    "prisma": "^4.12.0"
  }
}
